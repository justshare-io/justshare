{
  "name": "LunaBrain",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Save yo shit.",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "tab.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "all_frames": false
    }
  ],
  "permissions": [
    "activeTab"
  ],
  "chrome_url_overrides": {
    "newtab": "tab.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' http://localhost:8080; object-src 'self'"
  }
}
